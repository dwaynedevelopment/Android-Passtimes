<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/im_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/head_oval"
            android:contentDescription="@null"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_edit_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
        android:visibility="visible"/>

    <View
        android:id="@+id/vw_placeholder_edit"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/vw_profile_signup"
        android:elevation="1dp" />

    <ImageButton
        android:id="@+id/ic_camera_edit"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:src="@drawable/ic_camera"
        android:contentDescription="@null"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ti_fullname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:textColorHint="@color/colorThirdAccent"
        android:layout_below="@id/ic_camera_edit">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_fullname_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/full_name"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:textColor="@color/colorDarkPrimary"
            android:background="@drawable/et_dynamic_style"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_profile"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_edit_submit"
        style="@style/ActionButtonsAction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_selector_action"
        android:text="@string/submit"/>

</RelativeLayout>